html, body
    font-family: 'Noto Serif', serif
    height: 100%;
    
.header
    margin-top: 1rem
    padding: 3rem 3rem 1rem 3rem
    height: 100%;
    @media only screen and (max-width: 40em) {
        padding: 1rem
    }
        
    h1
        font-family: 'Noto Serif', serif
        font-weight: 700
        font-size: 4rem
        color: #1D115F
        text-align: center 
        @media only screen and (max-width: 40em) {
            font-size:3rem;
        }
        
    .sub-logo
        width: 60%
        margin: 0 auto
        display: block

.magellan
    background: #456
    color: #FFF
    .sub-nav
        a
            color: #FFF
            &:hover
                // color: #A5A5A5
                color: #8CBEFF

.panel
    h2
        font-family: 'Source Sans Pro', sans-serif
        font-weight: 400
        color: #1D115F
    p
        // font-family: 'Lato', sans-serif
        font-family: 'Noto Serif', serif
        font-weight: 400
        font-size: 1.4rem
